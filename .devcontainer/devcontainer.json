{
  "name": "Obsidian Remote Development",
  "dockerFile": "../Dockerfile",
  "settings": {
    "terminal.integrated.shell.linux": "/bin/bash"
  },
  "extensions": [
    "ms-azuretools.vscode-docker",
    "ms-vscode-remote.remote-containers",
    "ms-vscode-remote.remote-ssh",
    "ms-vscode-remote.remote-ssh-edit",
    "ms-vscode-remote.remote-wsl",
    "ms-vscode-remote.vscode-remote-extensionpack"
  ],
  "postCreateCommand": "bash deployment/02_requirements.sh && bash deployment/03_deploy_code.sh",
  "remoteUser": "vscode",
  "tasks": {
    "test": "bash deployment/02_requirements.sh && bash deployment/03_deploy_code.sh",
    "build": "docker build -t obsidian-remote:latest -f ../Dockerfile .",
    "launch": "docker run -d -v D:/ob/vaults:/vaults -v D:/ob/config:/config -p 8080:8080 ghcr.io/sytone/obsidian-remote:latest"
  }
}
